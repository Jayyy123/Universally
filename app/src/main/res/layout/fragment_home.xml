                    android:id="@+id/dd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Comets"
                    android:textSize="19sp"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:background="@drawable/textbutton"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:fontFamily="@font/montbold"/>

                <TextView
                    android:id="@+id/e"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Latest"
                    android:textSize="19sp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:background="@drawable/textbuttonw"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:fontFamily="@font/montbold"/>
                <TextView
                    android:id="@+id/ee"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Latest"
                    android:textSize="19sp"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:background="@drawable/textbutton"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:fontFamily="@font/montbold"/>
                <TextView
                    android:id="@+id/f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satelite Imaging"
                    android:textSize="19sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/textbuttonw"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:fontFamily="@font/montbold"/>
                <TextView
                    android:id="@+id/ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satelite Imaging"
                    android:textSize="19sp"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:background="@drawable/textbutton"
                    android:textColor="@color/black"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:fontFamily="@font/montbold"/>



            </LinearLayout>



        </ScrollView>



    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:id="@+id/section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/section_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sections"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/section_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/section"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sections"/>




</androidx.constraintlayout.widget.ConstraintLayout>