<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Universally" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/hamburger</item>
    </style>

    <style name="font" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="fontFamily"> @font/mont </item>
        <item name="android:textSize">50sp</item>

    </style>

    <style name="Launch" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/icon_blue</item>

    </style>

    <style name="curve" parent="ShapeAppearance.MaterialComponents.SmallComponent">

        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">40%</item>

    </style>

    <style name="menu" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="colorPrimary">@color/white</item>


    </style>

    <style name="hamburger" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>